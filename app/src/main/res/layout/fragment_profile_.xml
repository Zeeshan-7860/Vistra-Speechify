<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/graymain"
    tools:context="Profile_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/logout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textColor="#4FAEF7"
            android:text="PROFILE" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/info"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/information" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ron"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/linearlayout"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:text="Hey!! " />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/dpusername"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:text="username"

            />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:elevation="300dp"
        android:layout_height="320dp"
        android:id="@+id/cardbackprofile1"
        android:background="@color/white"
        app:cardElevation="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#E1F5FE"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/gmailimage"
                    android:layout_height="45dp"

                    android:layout_gravity="center"
                    android:src="@drawable/gmail"
                    app:civ_border_width="0.5dp"

                    app:civ_border_color="#8A000000" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/email"
                    android:hint="user123@gmail.com"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textColorHint="@color/black"
                    android:padding="11dp"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#85000000"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/addressimage"
                    android:layout_height="45dp"

                    android:layout_gravity="center"
                    android:src="@drawable/location"
                    app:civ_border_width="0.5dp"

                    app:civ_border_color="#8A000000" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Islamabad, Pakistan"
                    android:layout_marginTop="5dp"
                    android:id="@+id/address"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:padding="12dp"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#85000000"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/phonepic"
                    android:layout_height="45dp"

                    android:layout_gravity="center"
                    android:src="@drawable/phone"
                    app:civ_border_width="0.5dp"

                    app:civ_border_color="#8A000000" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="+92 123456789"
                    android:id="@+id/phone"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#85000000"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/favourites"
                    android:layout_height="45dp"

                    android:layout_gravity="center"
                    android:src="@drawable/lover"
                    app:civ_border_width="0.5dp"

                    app:civ_border_color="#8A000000" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/favourites1"
                    android:hint="Favourites"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textColorHint="@color/black"
                    android:padding="11dp"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#85000000"
                android:layout_marginTop="-10dp"
                />



        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:elevation="300dp"
        android:layout_height="70dp"
        android:id="@+id/cardbackprofile2"
        android:background="@color/white"
        app:cardElevation="15dp"
        android:layout_marginTop="17dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#E1F5FE"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_height="90dp">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/padlock"
                    app:civ_border_width="0.5dp"
                    android:id="@+id/passwordpic"
android:layout_marginTop="-10dp"
                    app:civ_border_color="#8A000000" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    app:hintTextColor="#0288D1"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="10dp"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="#0288D1"
                    android:layout_gravity="center"
                    app:passwordToggleTint="@color/material_dynamic_primary0"
                    android:drawableEnd="@drawable/select_design"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/password"
                        android:textColorHint="@color/black"
                        android:text="123456789"
                        android:enabled="false"

                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-20dp"
                        android:inputType="textPassword"
                        android:background="#E1F5FE"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:drawableEnd="@drawable/select_design"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#85000000"
                android:layout_marginTop="-10dp"

                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:elevation="300dp"
            android:layout_height="70dp"
            android:id="@+id/cardbackprofile3"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#E1F5FE"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_height="90dp">
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/resume"
                        app:civ_border_width="0.5dp"
                        android:id="@+id/editpic"
                        android:layout_marginTop="-6dp"
                        app:civ_border_color="#8A000000" />
                    <TextView
                        android:layout_width="280dp"
                        android:layout_marginLeft="5dp"
                        android:hint="Edit Profile"
                        android:layout_marginTop="-1dp"
                        android:id="@+id/edit"
                        android:textColorHint="@color/black"
                        android:padding="12dp"

                        android:textSize="14dp"
                        android:fontFamily="sans-serif"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#85000000"
                    android:layout_marginTop="-10dp"

                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </ScrollView>

</LinearLayout>