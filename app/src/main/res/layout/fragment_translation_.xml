<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/graymain"
    android:orientation="vertical"
    tools:context="Translation_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textColor="#4FAEF7"
        android:text="TRANSLATION" />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:id="@+id/cardback1"
        android:elevation="300dp"
        android:layout_height="90dp"
        app:cardElevation="10dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#E1F5FE"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:elevation="100dp"
                android:id="@+id/meracard1"
                android:layout_height="40dp"
                android:paddingLeft="40dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="30dp">

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:theme="@style/SpinnerDropDownStyle"
                    android:background="@color/cardview_dark_background"
                    />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/loop"
                android:id="@+id/loop"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:elevation="100dp"
                android:layout_height="40dp"
                app:cardElevation="10dp"
                android:id="@+id/meracard2"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="30dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_dark_background"
                    android:id="@+id/spinner4"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:elevation="300dp"
        android:layout_height="210dp"
        android:id="@+id/cardback2"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        android:background="#E1F5FE"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E1F5FE"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:textColorHint="#79000000"
            android:hint="Enter Text"
            android:id="@+id/et1"
            android:padding="30dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            >


        </EditText>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/eraser"
            android:layout_gravity="end"
            android:id="@+id/eraser2"
            android:layout_marginTop="160dp"
            android:layout_marginRight="20dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:elevation="300dp"
        android:id="@+id/cardback3"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E1F5FE"
            android:gravity="top"
            android:hint="Translated Text"
            android:layout_gravity="center"
            android:id="@+id/tv1"
            android:padding="30dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:textColorHint="#79000000"
            android:fontFamily="sans-serif"

            />


    </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/translate"
            android:backgroundTint="@color/teal_700"
            android:text="TRANSLATE"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center">


        </Button>





</LinearLayout>