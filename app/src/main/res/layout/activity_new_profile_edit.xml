<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/graymain"
    tools:context=".NewProfileEdit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif"
                    android:textColor="#4FAEF7"
                    android:text="EDIT PROFILE" />


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/editimage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:elevation="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ron"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />






            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:elevation="300dp"
                android:layout_height="320dp"
                android:id="@+id/cardbackprofile1"
                android:background="@color/white"
                app:cardElevation="15dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardCornerRadius="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#E1F5FE"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:text="NAME:"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:src="@drawable/gmail"
                            app:civ_border_width="0.5dp"

                            app:civ_border_color="#8A000000" />

                        <EditText
                            android:layout_width="280dp"
                            android:layout_marginLeft="17dp"
                            android:text="ZEESHAN AHMED"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:id="@+id/editname"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:textColorHint="@color/black"
                            android:padding="15dp"
                            android:textSize="14dp"
                            android:fontFamily="sans-serif"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#85000000"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:text="EMAIL:"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:src="@drawable/gmail"
                            app:civ_border_width="0.5dp"

                            app:civ_border_color="#8A000000" />

                        <EditText
                            android:layout_width="280dp"
                            android:layout_marginLeft="17dp"
                            android:textColor="@color/black"
                            android:text="user123@gmail.com"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:id="@+id/editemail"
                            android:background="@color/white"
                            android:textColorHint="@color/black"
                            android:padding="15dp"
                            android:textSize="14dp"
                            android:fontFamily="sans-serif"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#85000000"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="45dp"
                            android:text="ADDRESS:"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:src="@drawable/gmail"
                            app:civ_border_width="0.5dp"

                            app:civ_border_color="#8A000000" />

                        <EditText
                            android:layout_width="280dp"
                            android:layout_marginLeft="5dp"
                            android:text="HOUSE NO 123,STREET NO 123"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:textColorHint="@color/black"
                            android:padding="14dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:id="@+id/editaddress"
                            android:background="@color/white"
                            android:fontFamily="sans-serif"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#85000000"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:text="PHONE:"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:src="@drawable/gmail"
                            app:civ_border_width="0.5dp"

                            app:civ_border_color="#8A000000" />

                        <EditText
                            android:layout_width="280dp"
                            android:layout_marginLeft="17dp"
                            android:text="1234567890"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:textColorHint="@color/black"
                            android:padding="15dp"
                            android:textSize="14dp"
                            android:id="@+id/editphone"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:fontFamily="sans-serif"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#85000000"

                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:elevation="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/cardbackprofile2"
                android:background="@color/white"
                app:cardElevation="15dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                app:cardCornerRadius="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#E1F5FE"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:src="@drawable/padlock"
                            app:civ_border_width="0.5dp"
                            android:id="@+id/passwordpic"

                            app:civ_border_color="#8A000000" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            app:hintTextColor="#0288D1"
                            app:passwordToggleEnabled="true"
                            android:textColorHint="#0288D1"
                            android:layout_gravity="center"
                            app:passwordToggleTint="@color/material_dynamic_primary0"
                            android:drawableEnd="@drawable/select_design"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:id="@+id/editpassword"
                                android:textColorHint="@color/black"
                                android:text="123456789"
                                android:padding="16dp"
                                android:layout_marginLeft="13dp"
                                android:inputType="textPassword"
                                android:background="@color/white"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:drawableEnd="@drawable/select_design"
                                android:layout_gravity="center"
                                android:layout_height="match_parent"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#85000000"
                        android:layout_marginTop="-10dp"

                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center">

            <Button
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="SAVE CHANGES"
                android:id="@+id/SAVE"
                android:textStyle="bold"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/teal_700"
                />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:text="CLEAR ALL"
                    android:id="@+id/clear_text"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/teal_700"
                    />

</LinearLayout>

        </LinearLayout>



</LinearLayout>